require gnome.org python [ python_dep=2.2 ]

SUMMARY="Python bindings for GooCanvas"
HOMEPAGE="http://live.gnome.org/PyGooCanvas"

LICENCES="LGPL-2"
SLOT="0"
PLATFORMS="~x86"

MYOPTIONS="doc"

DEPENDENCIES="
    build:
        dev-util/pkg-config
        doc? (
            dev-libs/libxslt
            dev-doc/gtk-doc[>=1.4]
        )
    build+run:
        dev-python/pycairo[>=1.8.0]
        gnome-bindings/pygobject:2[>=2.10.1]
        gnome-bindings/pygtk:2[>=2.10.0]
        x11-libs/goocanvas[>=0.14]
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'doc docs' 'doc gtk-doc' )

